asd() {														
cat <<"EOT"															

               ...
             ;::::;
           ;::::; :;	DON'T FEAR THE REAPER... 
         ;:::::'   :;        
        ;:::::;     ;.			-={ i3-BlackArch }=-
       ,:::::'       ;           OOO\
       ::::::;       ;          OOOOO\
       ;:::::;       ;         OOOOOOOO
      ,;::::::;     ;'         / OOOOOOO
    ;:::::::::`. ,,,;.        /  / DOOOOOO
  .';:::::::::::::::::;,     /  /     DOOOO
 ,::::::;::::::;;;;::::;,   /  /        DOOO
;`::::::`'::::::;;;::::: ,#/  /          DOOO
:`:::::::`;::::::;;::: ;::#  /            DOOO
::`:::::::`;:::::::: ;::::# /              DOO
`:`:::::::`;:::::: ;::::::#/               DOO
 :::`:::::::`;; ;:::::::::##                OO
 ::::`:::::::`;::::::::;:::#                OO
 `:::::`::::::::::::;'`:;::#                O
  `:::::`::::::::;' /  / `:#
   ::::::`:::::;'  /  /   `#
EOT
}
asd
echo
echo "              :: Lets Do This ::     " &&
echo
pacman -Syyu &&
sleep 1 &&
rm -rf /usr/share/fonts/* &&    ## The script will fail without this line... Dont worry ... fonts will be taken care of
sleep 1 &&
pacman -S base-devel xorg-server xorg-server-utils feh xorg-font-util xorg-xinit xterm i3-wm i3status dmenu ttf-dejavu xf86-video-vesa xf86-input-synaptics firefox rxvt-unicode &&
sleep 2 &&
X -configure && sleep 1 &&
sleep 1 &&
if [ "$HOME/xorg.conf.new" ]
	then
		$(cp $HOME/xorg.conf.new $HOME/xorg.conf)
		$(rm $HOME/xorg.conf.new)
	else
		echo
		echo " where is xorg.conf.new ? -- skipping"
fi
sleep 1 &&
echo
echo "Setting Up i3 config in ~/.i3/config " &&
echo
wget https://raw.github.com/BlackArch/i3-blackarch/master/.i3/config &&
sleep 2 &&
if [ "$HOME/.i3/config" ]
then
	echo " $(rm -rf ~/.i3) "
	echo " $(mkdir ~/.i3) "
	echo " $(mv config ~/.i3/config) "
	else 
		echo " $(mkdir ~/.i3) "
		echo " $(mv config ~/.i3/config) "
		echo " Things seems fine"
fi
sleep 1 &&
echo
echo " Setting up .Xresources, .vimrc and .xinitrc" &&
echo
cp ~/i3-blackarch/.Xresources ~/ &&
cp ~/i3-blackarch/.xinitrc ~/ &&
sleep 1 &&
echo
echo " Do you want the default vim config from blackarch ? Choose 'N' for i3 vim setup   y or n   "
read OPTION1
	if [ "$OPTION1" == y -o "$OPTION1" == Y ]
		then
			echo
			echo " Thats a big 10-4 "
				elif [ "$OPTION1" == n -o "$OPTION1" == N ]
					then
						$(rm -rf ~/.vim && rm ~/.viminfo)
						$(wget https://raw.github.com/t60r/i3-blackarch/master/.vimrc)
							sleep 2
						$(cp .vimrc ~/.vimrc)
			else
				echo
				echo " An Error Occured "
				echo " Did you choose 'y'  or 'n' ? "
	fi
asd() {
cat <<"EOT"
				TUX IS A BLACKARCHER
                 .88888888:. 
                88888888.88888. 
              .8888888888888888. 
              888888888888888888 
              88' _`88'_  `88888 
              88 88 88 88  88888 
              88_88_::_88_:88888 ~ Sup?
              88:::,::,:::::8888 
              88`:::::::::'`8888 
             .88  `::::'    8:88. 
            8888            `8:888. 
          .8888'             `888888. 
         .8888:..  .::.  ...:'8888888:. 
        .8888.'     :'     `'::`88:88888 
       .8888        '         `.888:8888. 
      888:8     i3  . Archlinux 888:88888 
    .888:88        .:           888:88888: 
    8888888.       ::           88:888888 
    `.::.888.      ::          .88888888 
   .::::::.888.    ::         :::`8888'.:. 
  ::::::::::.888   '         .:::::::::::: 
  ::::::::::::.8    '      .:8::::::::::::. 
 .::::::::::::::.        .:888::::::::::::: 
 :::::::::::::::88:.__..:88888:::::::::::' 
  `'.:::::::::::88888888888.88:::::::::' 
        `':::_:' -- '' -'-' `':_::::'` 
EOT
}
asd
sleep 3 &&
echo " NOW TYPE     'startx'  AND Press Enter"
