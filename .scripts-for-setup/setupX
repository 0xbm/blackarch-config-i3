#!/bin/bash
#	THIS IS JUST THE BEGINNING \\ DONT TRIP
# i3-Arch     \\ i3-Blackarch //
#####################################
DoPLZ=$(echo "exec i3" >> ~/.xinitrc)
echo
echo " Lets do this " &&
echo
pacman -Syyu &&
sleep 1 &&
rm -rf /usr/share/fonts/* &&    ## The script will fail without this line... Dont worry ... fonts will be taken care of
sleep 1 &&
pacman -S base-devel xorg-server xorg-server-utils feh xorg-font-util xorg-xinit xterm i3-wm i3status dmenu ttf-dejavu xf86-video-vesa xf86-input-synaptics firefox rxvt-unicode &&
sleep 2 &&
X -configure && sleep 1 &&
sleep 1 &&
if [ $HOME/xorg.conf.new ]
	then
		$(cp xorg.conf.new xorg.conf)
		$(rm xorg.conf.new)
	else
		echo
		echo " where is xorg.conf.new ? -- skipping"
fi
cp /etc/skel/.xinitrc ~ &&  	## Still needs misc things \\ will add later
if [ $HOME/.xinitrc ]
	then
		echo " $DoPLZ "
	else
		echo
		echo " Where is .xinitrc ??? "
fi
sleep 1 &&
echo
echo "Setting Up i3 config in ~/.i3/config " &&
echo
wget https://raw.github.com/BlackArch/i3-blackarch/master/.i3/config &&
sleep 2 &&
if [ $HOME/.i3/config ]
then
	$(rm -rf ~/.i3)
	$(mkdir ~/.i3)
	$(mv config ~/.i3/config)
	else 
		$(mkdir ~/.i3)
		$(mv config ~/.i3/config)
		echo " Things seems fine"
fi
sleep 1 &&
echo
echo " Downloading and Setting up .Xresources & .vimrc " &&
echo
wget https://raw.github.com/t60r/i3-blackarch/master/.Xresources &&
sleep 2 &&
mv .Xresources ~ &&
sleep 1 &&
echo
echo " Do you want the default vim config from blackarch ? Choose 'N' for i3 vim setup   y or n   "
read OPTION1
	if [ $OPTION1 == y -o $OPTION1 == Y ]
		then
			echo
			echo " Thats a big 10-4 "
				elif [ $OPTION1 == n -o $OPTION1 == N ]
					then
						$(rm -rf ~/.vim && rm ~/.viminfo)
						$(wget https://raw.github.com/t60r/i3-blackarch/master/.vimrc)
							sleep 2
						$(cp .vimrc ~/.vimrc)
			else
				echo
				echo " An Error Occured "
				echo " Did you choose 'y'  or 'n' ? "
	fi
echo
echo " Would you like a zsh setup customized for i3-blackarch  Type 1 "
echo 
echo " To Skip this and Use DEFAULT zsh config for blackarch   Type  0 "
echo
read yourNUMBER
if [ $yourNUMBER == 1 ]
	then 
		echo " $(source pacaur) "
		elif [ $yourNUMBER == 0 ]
			then
				echo
				echo " Understood "
	else
		echo " ERROR OCCURED --  ENTER  1  or 0 "
fi
echo
echo " Would you like me to setup your background :)     'y' or 'n' "
read HU2
if [ $HU2 == y -o $HU2 == Y ]
	then
		echo " $(startx) "
		sleep 4
		echo " $(xterm -e source background-ASAP) "
	else
		echo
		echo " You chose NO -- OR entered an invalid character "
fi
