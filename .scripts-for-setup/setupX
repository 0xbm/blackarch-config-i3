#!/bin/bash
#	THIS IS JUST THE BEGINNING \\ DONT TRIP
# i3-Arch     \\ i3-Blackarch //
#####################################
echo
echo " Lets do this " &&
echo
pacman -Syyu &&
sleep 1 &&
rm -rf /usr/share/fonts/* &&    ## The script will fail without this line... Dont worry ... fonts will be taken care of
sleep 1 &&
pacman -S base-devel xorg-server xorg-server-utils feh xorg-xinit xterm i3-wm i3status dmenu ttf-dejavu xf86-video-vesa xf86-input-synaptics firefox rxvt-unicode &&
sleep 2 &&
X -configure && sleep 4 &&
mv xorg.conf.new xorg.conf &&
rm xorg.conf.new &&
cp /etc/skel/.xinitrc ~ &&  	## Still needs exec i3 + misc things \\ will add later
sleep 1 &&
echo
echo "Setting Up i3 config in ~/.i3/config " &&
echo
wget https://raw.github.com/t60r/i3-blackarch/master/.i3/config &&
sleep 2 &&
if [ $HOME/.i3/config == false ]
then
	$(mkdir ~/.i3)
	$(cp config ~/.i3/config)
		elif [ $HOME/.i3/config == true ]
			then
				echo
				echo " This file exists already... Get help at #blackarch @ irc.freenode.net "
	else 
		echo
		echo " Things seems fine"
fi
rm config &&
sleep 1 &&
echo
echo " Downloading and Setting up .Xresources & .vimrc " &&
echo
wget https://raw.github.com/t60r/i3-blackarch/master/.Xresources &&
sleep 2 &&
mv .Xresources ~ &&
sleep 1 &&
echo
echo " Do you want the default vim config from blackarch ? Choose 'N' for i3 vim setup   y or n   "
read OPTION1
	if [ $OPTION1 == y -o $OPTION1 == Y ]
		then
			echo
			echo " Thats a big 10-4 "
				elif [ $OPTION1 == n -o $OPTION1 == N ]
					then
						$(rm -rf ~/.vim)
						$(wget https://raw.github.com/t60r/i3-blackarch/master/.vimrc)
							sleep 2
						$(mv .vimrc ~)
			else
				echo
				echo " And error occured "
	fi
source background-ASAP &&
